#pragma once
#include <string>

class Account
{
private:
	std::string m_username;
	std::string m_PIN;
	long long m_balance; //Kuruþ cinsinden

public:
	Account(std::string username, std::string PIN, long long balance) 
	:   m_username(username),
		m_PIN(PIN),
		m_balance(balance) 
	{}

	const bool checkPIN(std::string PIN) {
		return (m_PIN == PIN) ? true : false;
	}

	bool deposit(long long amount)
	{
		if (amount <= 0) {
			return false;
		}
		m_balance += amount;
		return true;
	}


};